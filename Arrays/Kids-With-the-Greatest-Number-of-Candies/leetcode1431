import java.util.*;

class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        List<Boolean> result = new ArrayList<>();
        
        int max = 0;
        
        // Step 1: Finding the  maximum
        for (int candy : candies) { //using for-each loop or advanced for loop to transfer the elements of candies to candy
            if (candy > max) {
                max = candy;
            }
        }
        
        // Step 2: Comparing after adding the  extraCandies as askd in the ques
        for (int candy : candies) {
            result.add(candy + extraCandies >= max);
        }
        
        return result;
    }
}
